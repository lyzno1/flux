{
	"$schema": "https://unpkg.com/knip@5/schema.json",
	"ignore": ["**/routeTree.gen.ts"],
	"ignoreDependencies": ["dotenv"],
	"ignoreUnresolved": ["./routeTree.gen"],
	"workspaces": {
		".": {
			"ignoreDependencies": ["@flux/config", "@flux/env"]
		},
		"apps/server": {},
		"apps/web": {
			"entry": ["src/main.tsx", "src/routes/**/*.tsx"],
			"ignoreDependencies": ["@fontsource-variable/inter", "shadcn", "tw-animate-css", "tailwindcss", "postcss"],
			"project": "src/**/*.{ts,tsx}"
		},
		"packages/api": {},
		"packages/auth": {},
		"packages/config": {},
		"packages/db": {},
		"packages/env": {
			"entry": "src/{server,web}.ts"
		}
	}
}
