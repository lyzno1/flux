{
  "extends": "@flux/config/tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "ESNext"],
    "types": ["vite", "vite/client"],
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "fumadocs-mdx:collections/*": ["./.source/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
