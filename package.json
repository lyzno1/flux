{
	"devDependencies": {
		"@biomejs/biome": "catalog:dev",
		"@flux/config": "workspace:*",
		"@types/node": "catalog:dev",
		"@typescript/native-preview": "7.0.0-dev.20260130.1",
		"@vitest/coverage-v8": "catalog:dev",
		"knip": "catalog:dev",
		"lint-staged": "catalog:dev",
		"simple-git-hooks": "catalog:dev",
		"turbo": "catalog:dev",
		"typescript": "catalog:dev",
		"vitest": "catalog:dev"
	},
	"lint-staged": {
		"*": "biome check --write --no-errors-on-unmatched"
	},
	"name": "flux",
	"packageManager": "pnpm@10.29.3+sha512.498e1fb4cca5aa06c1dcf2611e6fafc50972ffe7189998c409e90de74566444298ffe43e6cd2acdc775ba1aa7cc5e092a8b7054c811ba8c5770f84693d33d2dc",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"check": "biome check --write .",
		"check-types": "turbo run check-types",
		"db:generate": "turbo run -F @flux/db db:generate",
		"db:migrate": "turbo run -F @flux/db db:migrate",
		"db:push": "turbo run -F @flux/db db:push",
		"db:studio": "turbo run -F @flux/db db:studio",
		"dev": "turbo run dev",
		"dev:native": "turbo run -F native dev",
		"dev:server": "turbo run -F server dev",
		"dev:web": "turbo run -F web dev",
		"knip": "knip",
		"prepare": "simple-git-hooks",
		"test": "turbo run test",
		"test:coverage": "turbo run test:coverage"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged && pnpm run check-types"
	},
	"type": "module"
}
