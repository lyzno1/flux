{
	"name": "flux",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"dev": "turbo dev --filter=!fumadocs",
		"dev:docs": "turbo -F fumadocs dev",
		"build": "turbo build",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @flux/db db:push",
		"db:studio": "turbo -F @flux/db db:studio",
		"db:generate": "turbo -F @flux/db db:generate",
		"db:migrate": "turbo -F @flux/db db:migrate",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"check": "biome check --write .",
		"check-types": "turbo check-types",
		"knip": "knip",
		"prepare": "simple-git-hooks"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged && pnpm run check-types"
	},
	"lint-staged": {
		"*": "biome check --write --no-errors-on-unmatched"
	},
	"dependencies": {
		"@flux/env": "workspace:*",
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"@flux/config": "workspace:*",
		"@types/node": "catalog:",
		"@typescript/native-preview": "7.0.0-dev.20260130.1",
		"@vitest/coverage-v8": "catalog:",
		"knip": "5.82.1",
		"lint-staged": "16.2.7",
		"simple-git-hooks": "2.13.1",
		"turbo": "2.8.1",
		"typescript": "catalog:",
		"vitest": "catalog:"
	},
	"packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264"
}
